<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h3><strong>Add shift</strong></h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                     <h5>Add Employee</h5>
                     <form action="/add-shift" method="POST">
                     <div class="form-group">
                        <select class="form-control" id="addEmployee">
                            {{#each users}}
                                <option value="{{userID}}">{{userName}}</option>
                            {{/each}}
                            
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <h5>Start Time</h5>
                      <div class="form-group">
                        <select class="form-control timeInterval" id="startTime">
                            <option value="selectTime">Select Time</option>
                        </select>
                      </div>
                </div>
                <div class="col-md-6">
                    <h5>End Time</h5>
                    <div class="form-group">
                        <select class="form-control timeInterval" id="endTime">
                            <option value="selectTime">Select Time</option>
                        </select>
                    </div>
                </div>
                <button class="btn btn-primary ml-3 mt-2" type="submit">Submit Shift</button>
                </form>
            </div>
        </div>
    </div>
</div>