{{#ifCond user.isAdmin '||' user.isManager}}
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h3><strong>Add shift</strong></h3>
        </div>
        <div class="card-body">
            <form action="/dashboard/add-shift/{{date}}?department={{department}}" method="POST">
                <div class="row">
                    <div class="col-md-6">
                         <h5>Add Employee</h5>
                         <div class="form-group">
                            <select class="form-control" id="addEmployee" name="userId">          
                                  <optgroup label="Front of House">
                                      {{#each users}}
                                           {{#ifCond department '==' 'FOH'}}
                                                <option value="{{userID}}">{{userName}}</option>
                                           {{/ifCond}}
                                       {{/each}}
                                   </optgroup>
                                   <optgroup label="Back of House">
                                      {{#each users}}
                                           {{#ifCond department '==' 'BOH'}}
                                                <option value="{{userID}}">{{userName}}</option>
                                           {{/ifCond}}
                                       {{/each}}
                                   </optgroup>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <h5>Start Time</h5>
                          <div class="form-group">
                            <select class="form-control timeInterval" id="startTime" name="shiftStart">
                                <option value="selectTime">Select Time</option>
                            </select>
                          </div>
                    </div>
                    <div class="col-md-6">
                        <h5>End Time</h5>
                        <div class="form-group">
                            <select class="form-control timeInterval" id="endTime" name="shiftEnd">
                                <option value="selectTime">Select Time</option>
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary ml-3 mt-2" type="submit">Submit Shift</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/ifCond}}